@model CookingSite.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<div class="valign-wrapper row login-box">
    <div class="col card hoverable s10 pull-s1 m6 pull-m3 l4 pull-l4">
        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <form>
                <div class="card-content">
                    <i class="material-icons" style="font-size: 50px;">account_circle</i>
                    <span class="card-title">Create a New Account</span>
                    <div class="input-field col s12">
                        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    </div>
                    <div class="input-field col s12">
                        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    </div>
                    <div class="input-field col s12">
                        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
                        @*</div>
                            <div class="input-field col s12">*@
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control textGrat" })
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">

                            <input type="submit" class="btn btn-default" value="Register" />

                        </div>
                    </div>
                </div>
            </form>
        }
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
