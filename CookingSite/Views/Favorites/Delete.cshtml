@model CookingSite.Models.Favorite
@{
    ViewBag.Title = "Delete";
}
<h2>Delete</h2>
<h3>Are you sure you want to delete this?</h3>
<div class="col s4 m4 detailsStyle">
    <div class="card">
        <div class="card-image">
            <img class="picSize" src="@Html.DisplayFor(modelItem => Model.Term.TermPicture)">
            <span class="card-title">@Html.DisplayFor(modelItem => Model.Term.TermName)</span>
        </div>
        <div class="card-content">
            <p>
                @Html.DisplayFor(modelItem => Model.Term.TermDef)

            </p>
        </div>
    </div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>